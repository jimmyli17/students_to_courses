<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1><%=@student.name%></h1>
      <h4>
        Enrolled in:
      </h4>
      <div class="list-group">
        <% @student.enrollments.each do |enrollment| %>
        <a href="#" class="list-group-item ">
          <h4 class="list-group-item-heading"><%=enrollment.course.name%></h4>  
        </a>
        <%end%>
      </div>
    </div>
  </div>
  <div class="details">
    <a href="/students/<%= @student.id %>/edit">Edit</a> |
    <a href="/students/<%= @student.id %>/destroy">Destroy</a>
  </div>